{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "target": "es2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "outDir": "./dist"
    },
    "include": [
        "src",
        "typings",
        "node_modules/typescript/lib/lib.dom.d.ts"
    ],
    "exclude": ["dist", "node_modules", "src/transactions/dist", "src/transactions/node_modules"]
}
